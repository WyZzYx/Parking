datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  USER
  ADMIN
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  carPlate  String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  tickets   Ticket[]
}

model Ticket {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  plate           String
  durationMinutes Int
  startTime       DateTime @default(now())
  endTime         DateTime
  createdAt       DateTime @default(now())

  @@index([userId, endTime])
  @@index([endTime])
  @@index([plate])
}
